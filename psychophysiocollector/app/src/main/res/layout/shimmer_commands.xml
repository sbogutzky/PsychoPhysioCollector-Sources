<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:text="@string/imu_settings_sampling_rate" />

            <TextView
                android:id="@+id/textViewCurrentSamplingRate"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <ListView
                android:id="@+id/listViewSamplingRates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/imu_settings_accelerometer_range" />

            <TextView
                android:id="@+id/textViewCurrentAccelerometerRange"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <ListView
                android:id="@+id/listViewAccelerometerRanges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/imu_settings_gyroscope_range" />

            <TextView
                android:id="@+id/textViewCurrentGyroscopeRange"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <ListView
                android:id="@+id/listViewGyroscopeRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/buttonToggleLed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/imu_settings_led_toggle" />
</LinearLayout>