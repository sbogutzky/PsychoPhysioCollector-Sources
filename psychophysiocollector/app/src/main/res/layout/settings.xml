<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_protocol_settings"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_margin="4dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp" >

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/test_protocol_settings_psychometric_scale"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/questionnaireSpinner" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp" >

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/test_protocol_settings_interval"
            android:id="@+id/textView" />

        <Spinner
                android:id="@+id/scala_timer_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp" >

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/test_protocol_settings_interval_variance"
            />

        <Spinner
                android:id="@+id/scala_variance_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </LinearLayout>


    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_save"
            android:id="@+id/saveButton" />
</LinearLayout>