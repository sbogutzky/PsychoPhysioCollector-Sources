<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/study_protocol_settings"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_margin="4dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/settings_participant_first_name"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="16"
            android:id="@+id/participant_first_name_edit_text"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/settings_participant_last_name"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="16"
            android:id="@+id/participant_last_name_edit_text"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/settings_activity"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="16"
            android:id="@+id/activity_name_edit_text"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp" >

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/study_protocol_settings_questionnaire"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/questionnaireSpinner" />
    </LinearLayout>
<!--
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp" >

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/study_protocol_settings_baseline_questionnaire"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/baseline_questionnaireSpinner" />
    </LinearLayout>
    -->

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/study_protocol_settings_configure_interval"
            android:id="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_centerVertical="true" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/configure_interval_switch"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:textOff="@string/no"
            android:textOn="@string/yes" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:visibility="gone"
        android:id="@+id/configure_interval_layout">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/study_protocol_settings_self_report_interval"
            android:id="@+id/textView" />

        <Spinner
                android:id="@+id/self_report_interval_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:visibility="gone"
        android:id="@+id/configure_variance_layout">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/study_protocol_settings_self_report_variance"
            />

        <Spinner
                android:id="@+id/self_report_variance_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_save"
            android:id="@+id/saveButton"
            android:layout_gravity="center_horizontal|center_vertical"/>
</LinearLayout>